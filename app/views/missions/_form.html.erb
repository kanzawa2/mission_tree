<%= form_for @mission, :html => { :class => "form-horizontal mission" } do |f| %>

  <% if @mission.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@mission.errors.count, "error") %> prohibited this mission from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @mission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :parent_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :parent_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:parent_id) %>
  </div>
  <div class="form-group">
    <%= f.label :lft, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lft, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lft) %>
  </div>
  <div class="form-group">
    <%= f.label :rgt, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rgt, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rgt) %>
  </div>
  <div class="form-group">
    <%= f.label :depth, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :depth, :class => 'form-control' %>
    </div>
    <%=f.error_span(:depth) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                missions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
